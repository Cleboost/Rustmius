{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "opener:default",
    "store:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-write-text-file",
    "fs:scope-home-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.ssh" },
        { "path": "$HOME/.ssh/*" }
      ]
    },
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-stdin-write",
    { "identifier": "shell:allow-execute", "allow": [ { "name": "ssh", "cmd": "ssh", "args": true } ] }
  ]
}
